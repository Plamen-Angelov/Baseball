@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

@{
    ViewBag.Title = "All users with player role";
}

<h2 class="text-center">@ViewBag.Title</h2>
<a class="fs-6 btn btn-success mb-3 p-2" asp-area="" asp-controller="User" asp-action="GetByEmail">Find user and add to player role</a>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col"><h5>User name</h5></th>
            <th scope="col"><h5>Email</h5></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>