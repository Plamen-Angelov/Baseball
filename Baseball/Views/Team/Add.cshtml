@model AddTeamModel

@{
    ViewBag.Title = "Add Team";
}


<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label"><strong>Team Name</strong></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HomeColor" class="form-label"><strong>Home Color</strong></label>
                <input asp-for="@Model.HomeColor" class="form-control" aria-required="true" />
                <span asp-validation-for="HomeColor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AwayColor" class="form-label"><strong>Away Color</strong></label>
                <input asp-for="@Model.AwayColor" class="form-control" aria-required="true" />
                <span asp-validation-for="AwayColor" class="text-danger"></span>
            </div
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
