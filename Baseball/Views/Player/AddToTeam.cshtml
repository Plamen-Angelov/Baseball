@model AddPlayerToTeamViewModel

<h2 class="text-center">@Model.Player.Name:</h2>

<p class="text-center"><strong>Number:</strong> @Model.Player.Number</p>
<p class="text-center"><strong>Position:</strong> @Model.Player.Position</p>
<p class="text-center"><strong>Bat:</strong> @Model.Player.Bat</p>
<p class="text-center"><strong>Glove:</strong> @Model.Player.Glove</p>
<p class="text-center"><strong>ThrowHand:</strong> @Model.Player.ThrowHand</p>
<p class="text-center"><strong>BattingAverage:</strong> @Model.Player.BattingAverage</p>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddToTeam" method="post">

            <div class="mb-3">
                <label asp-for="@Model.TeamId" class="form-label"><h5 class="text-center">Add @Model.Player.Name to team:</h5></label>
                <select asp-for="@Model.TeamId" class="form-control">
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <form class="input-group-sm" asp-controller="Player" asp-action="AddToteam" asp-route-playerId="@Model.Player.Id">
                <input type="submit" value="Add" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}